rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Stocks can be read by any authenticated user
    match /stocks/{stockId} {
      allow read: if request.auth != null;
      allow list: if request.auth != null;
    }

    // Feedback can be created by any authenticated user
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
    }
  }
}
