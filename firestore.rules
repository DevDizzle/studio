rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can only read, create, and update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    match /stocks/{document=**} {
      // Any authenticated user (including anonymous) can read the list of stocks.
      // This is safe as stock data is public.
      allow read, list: if request.auth != null;
    }
    match /feedback/{feedbackId} {
      // Any authenticated user can create feedback.
      allow create: if request.auth != null;
    }
  }
}
